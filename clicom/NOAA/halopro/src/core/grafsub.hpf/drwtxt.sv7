      DATA FILNAME /'&P:\HALO\FONTS\AHD000.FNT&'/
      DATA STFONT /'104','102','106','107','201','203','206',
     +             '405','406'/
C
      FILNAME(19:21) = STFONT(IFONT)
      CALL SETFON(FILNAME)
      RETURN
      END
