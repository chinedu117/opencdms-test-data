      SUBROUTINE DEFHLN(ICLR,ITYP,ITHK)
C
C       ** OBJECTIVE:  DEFINE HALO ATTRIBUTES FOR A LINE
C
C       ** INPUT:
C             ICLR....LINE COLOR NUMBER
C             ITYP....LINE PATTERN NUMBER
C             ITHK....LINE THICKNESS IN PIXELS
C    
      CALL SETCOL(ICLR)
      CALL SETLNS(ITYP)
      CALL SETLNW(ITHK)
C
      RETURN
      END
